{
	"name": "express_boilerplate",
	"version": "0.0.1",
	"description": "A simple express app boilerplate for starting new projects",
	"main": "index.js",
	"author": "Javier Alonso Gutiérrez Sepúlveda",
	"license": "MIT",
	"private": false,
	"homepage": "https://github.com/javier-gs00/express_boilerplate",
	"repository": {
		"type": "git",
		"url": "https://github.com/javier-gs00/express_boilerplate"
	},
	"scripts": {
		"build": "rm -rf dist && yarn build:js",
		"build:js": "babel src --out-dir dist --extensions \".ts\" --ignore \"src/**/*.test.ts\",\"src/**/*.test.js\" --source-maps inline",
		"lint": "./node_modules/.bin/eslint .",
		"start:dev": "./node_modules/nodemon/bin/nodemon.js --exec babel-node src/index.ts --extensions '.ts'",
		"start:prod": "node dist/index.js",
		"test": "jest --watch --coverage",
		"type-check": "./node_modules/typescript/bin/tsc --noEmit",
		"type-check:watch": "yarn type-check -- --watch"
	},
	"dependencies": {
		"@babel/runtime": "^7.4.4",
		"body-parser": "^1.18.3",
		"cors": "^2.8.4",
		"dotenv": "^6.0.0",
		"express": "^4.16.3",
		"express-graphql": "^0.8.0",
		"graphql": "^14.3.0",
		"helmet": "^3.16.0",
		"morgan": "^1.9.1",
		"winston": "^3.2.1"
	},
	"engines": {
		"node": ">=10.x",
		"npm": ">=5.x",
		"yarn": ">=1.7.x"
	},
	"devDependencies": {
		"@babel/cli": "^7.4.3",
		"@babel/core": "^7.4.3",
		"@babel/node": "^7.2.2",
		"@babel/plugin-transform-modules-commonjs": "^7.4.3",
		"@babel/plugin-transform-runtime": "^7.4.4",
		"@babel/polyfill": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"@babel/preset-typescript": "^7.3.3",
		"@types/body-parser": "^1.17.0",
		"@types/cors": "^2.8.4",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.16.1",
		"@types/express-graphql": "^0.8.0",
		"@types/graphql": "^14.2.0",
		"@types/helmet": "^0.0.43",
		"@types/jest": "^24.0.11",
		"@types/morgan": "^1.7.35",
		"@types/supertest": "^2.0.7",
		"@types/winston": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^1.7.0",
		"@typescript-eslint/parser": "^1.7.0",
		"babel-core": "^7.0.0-bridge.0",
		"babel-jest": "^24.7.1",
		"babel-plugin-module-resolver": "^3.2.0",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.2.0",
		"eslint-plugin-prettier": "^3.0.1",
		"jest": "^24.7.1",
		"nodemon": "^1.18.11",
		"prettier": "^1.17.0",
		"regenerator-runtime": "^0.13.2",
		"supertest": "^4.0.2",
		"typescript": "^3.4.3"
	}
}
